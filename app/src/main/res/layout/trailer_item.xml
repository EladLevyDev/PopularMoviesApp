<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewThumbnail"
        android:layout_width="@dimen/trailer_height"
        android:layout_height="@dimen/trailer_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:background="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/textViewTrailerName"
        style="@style/AppTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlueGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageViewThumbnail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Trailer Name" />
</android.support.constraint.ConstraintLayout>